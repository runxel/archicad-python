# EditorConfig for https://github.com/runxel/archicad-python
# see docs at https://EditorConfig.org

root = true

[*]
end_of_line = crlf
indent_size = 4
charset = utf-8

[*.xml]
insert_final_newline = false

[*.{md, txt}]
indent_style = tab
insert_final_newline = true

[*.py]
indent_style = tab
insert_final_newline = true
